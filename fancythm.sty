\NewDocumentCommand{\maketheorem}{mmm}{%
\NewDocumentEnvironment{#1}{o}{%
	\refstepcounter{#2}
	\let\proof\@proof
	\ifuse@fancythm
	\RenewDocumentCommand{\@proof}{O{}}{%
		\@isprovedtrue
		\begin{pf}[####1]
	}
	\let\proof\@proof
	\par
	\IfNoValueTF{##1}{\def\expl@in{}}{\def\expl@in{\space({##1})}}
	\@isprovedfalse
	\settowidth{\thmtitlewidthtmp}{\expl@in}
	\addtolength{\thmtitlewidth}{1.2323\thmtitlewidthtmp}
	\settowidth{\thmtitlewidthtmp}{#1 \csname the#1\endcsname}
	\addtolength{\thmtitlewidth}{1.2323\thmtitlewidthtmp}
	\addtolength{\thmtitlewidth}{16mm}
	\par\penalty-50
	\begingroup
	\postdisplaypenalty=10000
	\vskip 1.5ex
	\hrule height 0.7pt\nobreak
	\vskip 1.5ex
	\noindent{#3}{\expl@in}{\bfseries .}\kern 0.5em
	\def\proof{%
		\par\hbox to\hsize{\xleaders\hbox to.8em{\hss-\hss}\hfill}
		\noindent{\itshape proof.}\kern 1em
	}
	\else
	\IfNoValueTF{##1}{\def\expl@in{}}{\def\expl@in{\space({##1})}}
	\@isprovedfalse
	\RenewDocumentCommand{\@proof}{O{}}{%
		\endgroup
		\end{flushleft}
		\@isprovedtrue
		\begin{pf}[####1]
	}
	\let\proof\@proof
	\begin{flushleft}
	{#3}{\expl@in}{\bfseries .}
	\begingroup
	\fi
}
{%
	\ifuse@fancythm
	\if@isproved
		\end{pf}
	\else
		\par\penalty10000
		\vskip1.5ex
		\hrule height 0.7pt
		\endgroup\par
		\vskip 1.5ex
		\par
	\fi
	\else
	\if@isproved
		\end{pf}
	\else
	\endgroup
	\end{flushleft}
	\fi\fi
}}

